		api_host: 192.168.89.11
		node: pve1
		newid: "{{ 1000 + item }}"
		name: "group1-vm{{ item }}"
		clone: "cloud-temp" # Имя шаблона Cloud-Init
		full: true
	loop: "{{ range(1, 4) }}"
	vars:
		group_id: 1
